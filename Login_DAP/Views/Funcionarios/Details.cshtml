@model Funcionario

@{
    ViewData["Title"] = "Detalles del funcionario";
}
<h1 style="color:darkred">Detalles del funcionario:</h1>

<div>
    <h4>Funcionario</h4>
    <hr />
    <dl class="col">
            <dt class="col-sm-3">
                <label>Nombre funcionario:</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreFuncionario)
            </dd>
        <dt class="col-sm-2">
            <label>Fecha de cargo:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaCargo)
        </dd>
        <dt class="col-sm-2">
            <label>Puesto oficial:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PuestoOficial)
        </dd>
        <dt class="col-sm-2">
            <label>Puesto funcional:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PuestoFuncional)
        </dd>
        <dt class="col-sm-2">
            <label>Unidad:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Unidad.NombreUnidad)
        </dd>
        <dt class="col-sm-2">
            <label>Email:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            <label>Teléfono:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class="col-sm-2">
            <label>Foto:</label>
        </dt>
        <dd class="col-sm-10">
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Foto)" alt="Foto" width="90" height="110" />
        </dd>
        <dt class="col-sm-2">
            <label>Estatus:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estatus)
        </dd>
    </dl>
</div>
<div class="form-group">
    <a asp-action="DetailsViewEdit" asp-controller="Funcionarios" id="ButtonForm" type="submit" class="btn btn-success" value="Editar">Editar</a> 
    <a asp-action="Index" asp-controller="Funcionarios" id="ButtonForm" type="submit" class="btn btn-danger">Regresar</a>
</div>

