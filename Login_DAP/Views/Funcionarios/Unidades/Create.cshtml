@model Unidad

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar nuevo unidad</h1>

<h4>Unidad</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Unidades">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreUnidad" class="control-label">Nombre unidad</label>
                <input asp-for="NombreUnidad" class="form-control" />
                <span asp-validation-for="NombreUnidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailUnidad" class="control-label">Correo</label>
                <input asp-for="EmailUnidad" class="form-control" />
                <span asp-validation-for="EmailUnidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefonos" class="control-label">Telefono</label>
                <input asp-for="Telefonos" class="form-control" />
                <span asp-validation-for="Telefonos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Domicilio" class="control-label">Domicilio</label>
                <input asp-for="Domicilio" class="form-control" />
                <span asp-validation-for="Domicilio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Colonia" class="control-label">Colonia</label>
                <input asp-for="Colonia" class="form-control" />
                <span asp-validation-for="Colonia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoPostal" class="control-label">Codigo postal</label>
                <input asp-for="CodigoPostal" type ="text" class="form-control" />
                <span asp-validation-for="CodigoPostal" class="text-danger"></span>
            </div>
               <div class="form-group">
                <label asp-for="Ciudad" class="control-label">Ciudad</label>
                <input asp-for="Ciudad" class="form-control" />
                <span asp-validation-for="Ciudad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entidad" class="control-label">Entidad</label>
                <input asp-for="Entidad" class="form-control" />
                <span asp-validation-for="Entidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pais" class="control-label">Pais</label>
                <input asp-for="Pais" class="form-control" />
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estatus" class="control-label">Estatus</label>
                <select asp-for="Estatus" class="form-control">
                    <option value="0">ACTIVO</option>
                    <option value="1">INACTIVO</option>
                </select>
                <span asp-validation-for="Estatus" class="text-danger"></span>
            </div>   
                <div class="form-group">
                    <strong> <label asp-for="IdDependencia" class="control-label">Nombre de la Dependencia</label></strong>
                    @Html.DropDownListFor(Dependencia => Dependencia.IdDependencia, (IEnumerable<SelectListItem>)ViewBag.IdDependencias, new { @class = "form-select dependencia-dropdown" })
                    <span asp-validation-for="IdDependencia" class="text-danger"></span>
                </div>
                <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Dependencias" asp-controller="Funcionarios" >Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
